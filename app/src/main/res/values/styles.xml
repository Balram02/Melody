<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme" parent="AccentTheme">

        <item name="primaryColor">@color/colorBackgroundDark1</item>
        <item name="primaryColorDark">@color/colorBackground1</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="textColorPrimary">@color/colorTextPrimary1</item>
        <item name="textColorPrimaryLight">@color/colorTextPrimaryLight1</item>
        <item name="textColorPrimaryDark">@color/colorTextPrimaryDark1</item>
        <item name="colorOverlay">@color/colorOverlay1</item>
        <item name="colorTint">@color/colorTint1</item>
        <item name="colorRipple">@color/colorRipple1</item>
        <item name="drawableTintColor">@color/white</item>
        <item name="albumTint">@color/albumTint1</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="backgroundColor"></item>-->

    </style>

    <style name="AccentTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<style name="AppTheme2" parent="@style/Theme.AppCompat.Light.NoActionBar">-->

    <style name="AppTheme2" parent="AccentTheme">

        <item name="primaryColor">@color/colorBackground2</item>
        <item name="primaryColorDark">@color/colorBackgroundDark2</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="textColorPrimary">@color/colorTextPrimary2</item>
        <item name="textColorPrimaryLight">@color/colorTextPrimaryLight2</item>
        <item name="textColorPrimaryDark">@color/colorTextPrimaryDark2</item>
        <item name="colorOverlay">@color/colorOverlay2</item>
        <item name="colorTint">@color/colorTint2</item>
        <item name="colorRipple">@color/colorRipple2</item>
        <item name="drawableTintColor">@color/black</item>
        <item name="albumTint">@color/albumTint2</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="backgroundColor"></item>-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBar" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorBackground2</item>
        <item name="colorPrimaryDark">@color/colorBackgroundDark2</item>
        <item name="colorAccent">@color/spotifyGreen</item>
    </style>

</resources>
